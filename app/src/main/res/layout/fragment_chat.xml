    <com.denweisenseel.scotlandsaarexperimental.customView.CustomScrollView

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollViewDebug"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context="com.denweisenseel.scotlandsaarexperimental.ChatFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"

            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <ListView
                android:id="@+id/chat_fragment_listview"
                android:layout_width="match_parent"
                android:layout_height="501dp" />

            <EditText
                android:id="@+id/chat_fragment_chatMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Message!"
                android:inputType="textPersonName"
                android:nextFocusLeft="@id/chat_fragment_chatMessage"
                android:nextFocusUp="@id/chat_fragment_chatMessage" />
        </LinearLayout>
    </com.denweisenseel.scotlandsaarexperimental.customView.CustomScrollView>